<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <uk.co.davidkanekanian.fabrik.Canvas
        android:id="@+id/fabrik_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/more_actions_button"
            android:foreground="@android:drawable/ic_menu_more"
            android:minWidth="50dp"
            android:minHeight="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/more_actions_menu"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lock_button"
                android:foreground="@android:drawable/ic_lock_idle_lock"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_button"
                android:foreground="@android:drawable/ic_menu_save"
                android:minWidth="50dp"
                android:minHeight="50dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/delete_point_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/delete_point"
            android:foreground="@android:drawable/ic_menu_delete"
            android:foregroundTint="#FF0000"
            android:minWidth="50dp"
            android:minHeight="50dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>